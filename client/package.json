{
  "name": "git-viewer",
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "start": "electron --inspect=5858 .",
    "electron:build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Git Viewer designed to enhance the Git experience for developers.",
  "dependencies": {
    "axios": "^1.7.2",
    "childprocess": "^2.0.2",
    "d3": "^7.9.0",
    "dotenv": "^16.4.5",
    "electron-updater": "^6.2.1",
    "fs-extra": "^11.2.0",
    "ignore": "^5.3.1",
    "simple-git": "^3.25.0",
    "vite": "^5.3.0",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5",
    "yaml": "^2.4.5"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "electron": "^31.0.1",
    "electron-builder": "^23.6.0",
    "electron-debug": "^4.0.0",
    "vite-plugin-static-copy": "^1.0.5"
  },
  "build": {
    "appId": "com.lilylinspace.gitviewer",
    "productName": "GitViewer",
    "files": [
      "**/*",
      "node_modules/**/*",
      "!release/**/*",
      "!dist-electron/**/*",
      "dist/**/*"
    ],
    "extraFiles": [
      "dist/preload.js",
      "dist/git-viewer.html",
      "dist/header.html",
      "dist/login.html",
      "dist/register.html",
      "dist/settings.html",
      "dist/workflow.html",
      "dist/assets/**/*",
      "dist/js/**/*",
      "dist/stylesheet/**/*",
      "dist/libs/**/*"
    ],
    "extraResources": [
      ".env"
    ],
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "LilyLin395135",
        "repo": "Git-Viewer"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
